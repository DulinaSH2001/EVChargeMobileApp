<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Tab Layout for booking categories -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/primary_blue"
        app:tabIndicatorColor="@color/primary_blue"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <!-- ViewPager for tab content -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Empty state when no bookings -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“…"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Bookings Yet"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start by creating your first charging station booking"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_first_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Booking"
            android:textSize="16sp"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/primary_blue"
            app:cornerRadius="24dp"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="32dp" />

    </LinearLayout>

</LinearLayout>